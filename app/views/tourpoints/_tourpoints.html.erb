<h2>Please click on map to drop a marker of the tour point</h2>
<div id="tourpointmap"></div>

<br>

<div class="form">


  <%= form_for [@tour,@tourpoint],html:{id:"tour_point_form"} do |f| %>


    <div class="form-group">
      <%= f.label :tour_point_name %>
      <%= f.text_field :tour_point_name %>
    </div>

    <div class="form-group">
      <%= f.label :tour_point_laglng %>
      <%= f.text_field :tour_point_laglng%>
    </div>

    <div class="form-group">
      <%= f.label :tour_point_description %>
      <%= f.text_area :tour_point_description %>
    </div>

    <div class="form-group">
      <%= f.label :tour_point_img,"Tour point image" %>
      <%= f.text_field :tour_point_img %>
    </div>

    <div class="form-group">
        <%= f.submit "Save this tour point" %>
    </div>
    <%= link_to 'Cancel', edit_tour_path(@tour) %>

  <% end %>
</div>
