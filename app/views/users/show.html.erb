<!-- User's created tours -->

<div class="container-fluid">
  <div class="row user_created_tours">
    <div class="col-md-12 user_created_tours">
      <div class="row">

        <% @tours_created.reverse.each do |tour| %>

          <div class="col-md-3">
            <div id="thumbnail_tour_index" class="thumbnail">


              <div class="index-container-relative userneedcenter">
                <% if current_user.id == tour.user_id %>
                  <%= image_tag tour.tourpic.url(:medium), :class=>"tour_pic_tourdetails" %>
                  <%= image_tag("gradient-01.png", :class=>"grad2_img")%>
                  <div class="container_relative_no_break">
                    <p class="tour_index_name"><%= link_to tour.name, tour_path(tour.id)%></p>
                    <hr class="white">
                    <p class="tour_index_cat"><%= tour.category%></p>
                  </div>
                <% end %>
              </div><!--.index-container-relative-->
              <div class="caption" id="tourindexcaption">
                <!-- <p class="tourp"><%= tour.description %></p> -->
                <p class="tourp">
                <i class="fa fa-map-marker" aria-hidden="true" id="i"></i>
                <span class="blue_names">Rendezvous Point: </span><br>
                <%= tour.rendezvous_point %></p>
                <%= link_to "EDIT", edit_tour_path(tour), :class=>"btn btn-success", :id=>"tourindexbut" %>
              </div>
            </div> <!--#thumbnail_tour_index-->
          </div><!--.col-md-4-->
        <% end %>
      </div><!--.row-->
    </div><!--.col-md-12-->
  </div><!--.row-->
</div><!--.container-fluid-->


<div class="tour" id="user_show_scheduled">

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="row">

          <h3 class="sub_heading">My Booked Tours</h3>



              <% if @bookings.empty? %>
              <div class="col-md-4">
                <div class="thumbnail">
              <p>You don't have any tours booked yet! Click <%= link_to "here", tours_url %> to find a tour to book!</p>
              <% else %>
              <% @tours_booked.each do |t| %>
              <% t.schedules.each do |s| %>
              <% s.bookings.each do |b| %>
              <div class="Booking-info">
                <p> Tour name: <%= link_to t.name,tour_url(t) %> </p>
                <p> Tour description: <%= t.description %> </p>
                <p> Current tour size: <%= Schedule.find(b.schedule_id).current_capacity %></p>
                <p> Tour date and time: <%= Schedule.find(b.schedule_id).tour_session %> </p>
                <p> Date I booked: <%= b.created_at.strftime("%Y %b %d") %></p>
                <p> Number of people I booked for (including myself): <%= b.booking_size %></p>
                <%= link_to "Edit Booking", edit_tour_schedule_booking_path(t,Schedule.find(b.schedule_id),b) %> | <%= link_to "Cancel Booking", tour_schedule_booking_path(t,Schedule.find(b.schedule_id),b), method: :delete, data: {confirm: "Are you sure you want to cancel this booking?"}%>
                <p>-----------------------------------------------------</p>
                <%= link_to "Review this tour!", new_tour_review_url(t.id) %>
                <% end %>
                <% end %>
                <% end %>
                <% end %>

              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
