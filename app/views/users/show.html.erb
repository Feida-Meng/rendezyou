<div class="logo_container">
  <div class="container">
    <h3 class="user_click"><%= link_to "Click here to give a tour", :anchor => "user_show_created" %></h3>
    <h3 class="user_click"><%= link_to "Click here to take a tour", :anchor => "user_show_scheduled" %></h3>
