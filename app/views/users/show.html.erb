<% flash.each do |name, msg| -%>
<%= content_tag :div, msg, class: alert %>
<% end %>

<!-- Created Tours -->
<h3 class="your_guide_tours" id="user_show_created">Here are your Guided Tours!</h3>

<h4 class="btn btn ">Click <%= link_to "here", new_tour_url %> to create more tours</h4>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row">

        <% @tours_created.each do |tour| %>
        <% if current_user.id == tour.user_id %>

        <div class="col-md-4">
          <div class="thumbnail">
            <!-- <img alt="Bootstrap Thumbnail Second" src="http://lorempixel.com/output/city-q-c-600-200-1.jpg" /> -->
            <p><%= image_tag tour.tourpic.url(:thumb), :class=>"tour_pic_tourdetails" %></p>

            <div class="caption">

              <h3><%= tour.name %></h3>
              <%= link_to "Edit Tour", edit_tour_url(tour.id) %><br>
              <%= tour.description%>
              <h4>Schedule:</h4>
              <p>
                <a class="btn btn-primary" href="#">Action</a> <a class="btn" href="#">Action</a>
                <%= link_to "Add another date", new_tour_schedule_path(tour) %>
              </p>
              <% if tour.schedules.empty? %>
              <p>You don't have any dates scheduled for this tour! Click <%= link_to "here", new_tour_schedule_path(tour) %> to schedule some! </p>
              <% else %>
              <ul>
                <% tour.schedules.each do |t_s| %>
                <li><%= "#{t_s.tour_session}, #{t_s.current_capacity} people booked, space left: #{t_s.max_capacity - t_s.current_capacity}" %></li>
                <% end %>
              </ul>

              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



