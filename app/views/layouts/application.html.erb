<!DOCTYPE html>
<html>
  <head>
    <title>Rendezyou</title>
    <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch|Pacifico" rel="stylesheet">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
    </header>
    <% if flash[:notice] %>
      <p id="notice"><%=flash[:notice] %></p>
    <%end%>
    <% if flash[:alert] %>
      <p id="alert"><%=flash[:alert] %></p>
    <%end%>

  <div class="navigate">
    <div class="nav_bar">
      <div class="nav_home">
        <%= link_to "RendezYou Home", root_path, :class=>"a_nav_home" %>
      </div>
      <% if current_user %>
      <div class="nav_login">
        <%= link_to "My Profile", profile_path, :class=>"nav_login" %>
      </div>
      <div class="nav_logout">
        <%= link_to "Log Out", session_path("current"), :method => :delete, :class=>"a_nav_logout" %>
      </div>
      <% else %>
      <div class="not_current_user">
        <%= link_to "Log in", new_session_path, :class=>"a_login" %> or <%=link_to "Sign Up", new_user_path, :class=>"a_signup" %>
      </div>
      <% end %>
    </div>
  </div>


    <%= yield %>

  </body>
</html>
