<%= form_for @tour, url: tours_path, html: { multipart: true} do |f| %>

<% if @tour.errors.any? %>
<div id="error_explanation">
  <h3><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h3>

  <ul>
    <% @tour.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<form class="form-horizontal">
  <div class="row">
    <div class="col-sm-7">

      <br>
      <br>
      <div class="form-group">
        <%= f.label :category%><br>
        <%= f.select :category, options_for_select(Tour.categories.map {|cat,v| [cat,cat]}) %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class=>"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class=>"form-control" %>
      </div>

      <div class="form-inline">
        <div class="row">

          <div class="col-sm-4">
            <div class="field">
              <%= f.label :capacity %>
              <%= f.number_field :capacity %>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="field">
              <%= f.label :duration_in_ms, "Approx duration(hrs)" %>
              <%= f.number_field :duration_in_ms %>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="field">
              <%= f.label :country_id, :class=>"col-sm-1 control-label" %><br>
              <%= f.collection_select :country_id, @countries, :id, :name, include_blank: 'Please select a country'%>
            </div>
          </div>

        </div>
      </div><!--form-inline-->

      <br>
      <br>

      <div class="form-group">
        <%= f.label :rendezvous_point%>
        <%= f.text_field :rendezvous_point, class:"form-control", id:"rendezvous-point-input" %>
        <br>
        <%= f.submit "Add some dates", name: "no_schedule", :class=>"btn btn-primary" %>
        <p class="tour-or">or</p>
        <%= f.submit "Book some dates)", name: "add_schedule", :class=>"btn btn-primary" %>
        <p class="tour-or">or</p>
        <%= link_to 'Cancel', tours_path, :class=>"btn btn-default" %>
      </div>

    </div><!--col-sm-7-->

    <div class="col-sm-4">
      <div class="tour_new_pic_img">
        <%= image_tag(@tour.tourpic.url, :class=>"missing_tours_new") %>
        <%= f.file_field :tourpic %>
        <br>
        <br>
        <div id="rendezvous-map"> </div>

      </div>
    </div>
<% end %>
</div>
</form>
</div>
</div>
