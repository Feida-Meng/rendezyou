$(function(){
  var cities = <%= Tour::COUNTRIES_AND_CITIES.to_json %>;

  $('#tour_country').change(function(){
    $('#tour_city').empty();
      country = $(this).val();
      cities[country].forEach(function(city){
        $('#tour_city').append("<option value="+ city +">"+ city +"</option>")
    })
  });


});
